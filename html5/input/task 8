  <!-- Scripts -->
  <script>
    function showConfirmation() {
      document.getElementById("confirmation").innerText = "ðŸŽ‰ Registration successful!";
    }

    function validatePhone() {
      const phone = document.getElementById("phone").value;
      if (!/^\d{10}$/.test(phone)) alert("Invalid phone number");
    }

    function displayFee() {
      const fee = document.getElementById("fee").value;
      document.getElementById("feeDisplay").innerText = `Selected Fee: â‚¹${fee}`;
    }

    function countChars() {
      const len = document.getElementById("feedback").value.length;
      document.getElementById("charCount").innerText = len;
    }

    function videoReady() {
      document.getElementById("videoMsg").innerText = "ðŸŽ¥ Video ready to play!";
    }

    // localStorage for preferred event type
    const select = document.getElementById("eventType");

    window.onload = () => {
      const saved = localStorage.getItem("preferredEvent");
      if (saved) select.value = saved;
    };

    select.onchange = () => {
      localStorage.setItem("preferredEvent", select.value);
    };

    function clearPrefs() {
      localStorage.clear();
      sessionStorage.clear();
      alert("Preferences cleared");
    }

    window.onbeforeunload = function () {
      return "You have unsaved changes. Are you sure you want to leave?";
    };
  </script>

