<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Bootstrap Dashboard with Gradient</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

<div class="container my-5">
  <h1 class="mb-4">Dashboard Overview</h1>

  <div class="row g-4">
    <!-- Primary Card -->
    <div class="col-md-3">
      <div class="p-4 bg-primary text-white rounded shadow-sm">
        <h5>Users</h5>
        <h2>1,245</h2>
        <p class="mb-0">Active users this month</p>
      </div>
    </div>

    <!-- Success Card -->
    <div class="col-md-3">
      <div class="p-4 bg-success text-white rounded shadow-sm">
        <h5>Sales</h5>
        <h2>$15,800</h2>
        <p class="mb-0">Total sales this month</p>
      </div>
    </div>

    <!-- Warning Card -->
    <div class="col-md-3">
      <div class="p-4 bg-warning text-dark rounded shadow-sm">
        <h5>Pending Orders</h5>
        <h2>45</h2>
        <p class="mb-0">Orders to be processed</p>
      </div>
    </div>

    <!-- Dark Gradient Card -->
    <div class="col-md-3">
      <div class="p-4 bg-dark bg-gradient text-white rounded shadow-sm">
        <h5>Server Issues</h5>
        <h2>3</h2>
        <p class="mb-0">Open tickets</p>
      </div>
    </div>
  </div>

  <!-- Section with bg-info -->
  <div class="mt-5 p-4 bg-info text-white rounded shadow-sm">
    <h4>Notifications</h4>
    <ul>
      <li>New user registered: Anna Smith</li>
      <li>Server backup completed successfully</li>
      <li>Sales target reached for Q2</li>
    </ul>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
